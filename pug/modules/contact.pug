//- Contact
section#contact
    .container
        .row
            .col-lg-12.text-center
                h2.section-heading.text-uppercase.contact-title Contáctanos
                //h3.section-subheading.text-muted Lorem ipsum dolor sit amet consectetur.
        .row
            .col-lg-12
                form#contactForm(name='sentMessage', novalidate='')
                    .row
                        .col-md-6
                            .form-group
                                input#name.form-control(type='text', placeholder='Nombre *', required='', data-validation-required-message='Por favor ingresa tu nombre.')
                                p.help-block.text-danger
                            .form-group
                                input#email.form-control(type='email', placeholder='Email *', required='', data-validation-required-message='Por favor ingresa tu email.')
                                p.help-block.text-danger
                            .form-group
                                input#phone.form-control(type='tel', placeholder='Teléfono ')
                                p.help-block.text-danger
                        .col-md-6
                            .form-group
                                textarea#message.form-control(placeholder='Mensaje *', required='', data-validation-required-message='Por favor ingresa tu mensaje.')
                                p.help-block.text-danger
                        .clearfix
                        .col-lg-12.text-center
                            #success
                            button#sendMessageButton.btn.btn-primary.btn-xl.text-uppercase(type='submit') Enviar
