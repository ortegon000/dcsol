form
    .row.form-group
        .col-md-4
            label.col-form-label(for='name') Nombre
            input#name.name.form-control(type='text' required='required')
        .col-md-4
            label.col-form-label.w-100(for='jobPosition') Puesto
            select#jobPosition.jobPosition.form-control.select2.w-100
                option(selected='') Seleccionar
                option Puesto 1
                option Puesto 2
                option Puesto 3
                option Puesto 4
                option Puesto 5
        .col-md-4
            label.col-form-label(for='office') Oficina
            input#office.office.form-control(type='text')

    .row.form-group
        .col-md-4
            label.col-form-label(for='age') Edad
            input#age.age.form-control(type='text' pattern='[0-9]')
        .col-md-4
            label.col-form-label(for='startDate') Fecha de inicio
            input#startDate.startDate.form-control.datepicker(type='text')
        .col-md-4
            label.col-form-label(for='salary') Salario
            input#salary.salary.form-control(type='text')

