- var imgPath = 'https://raw.githubusercontent.com/rodr7go/dcsol/master/img/portfolio/'

#ejemplos.tab-pane.fade.show.active(role='tabpanel', aria-labelledby='profile-tab')
    .row
        .col-md-4.col-sm-6.portfolio-item
            a.portfolio-link(data-toggle='collapse', data-parent='#tablesGroup', href='#collapseBasicTable' role='button', aria-expanded='false', aria-controls='collapseExample')
                .portfolio-hover
                    .portfolio-hover-content
                        i.fa.fa-plus.fa-3x
                img.img-fluid.w-100(src=imgPath+'basic_table.png', alt='Tabla basica')
            .portfolio-caption
                h4.text-primary Tabla básica
                p.text-muted Tabla con configuración básica

        .col-md-4.col-sm-6.portfolio-item
            a.portfolio-link(data-toggle='collapse', data-parent='#tablesGroup', href='#collapseFilterTable' role='button', aria-expanded='false', aria-controls='collapseExample')
