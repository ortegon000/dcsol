include ../../../mixins/targetToCollapse
- var imgPath = 'https://raw.githubusercontent.com/rodr7go/dcsol/master/img/portfolio/'

#ejemplos.tab-pane.fade.show.active(role='tabpanel', aria-labelledby='profile-tab')
    .row

        +targetToCollapse('#collapseBasicTable', 'Tabla básica', 'basic_table.png', 'Tabla con configuración básica')
        +targetToCollapse('#collapseFilterTable', 'Tabla con filtros', 'filter_table.png', 'Busqueda por medio de filtros')
        +targetToCollapse('#collapseButtonsTable', 'Tabla avanzada', 'buttons_table.png', 'Copiar, PDF, Excel')

    .row
        +targetToCollapse('#collapseEditableTable', 'Tabla editable', 'editable_table.png', 'Edicion en linea')
        +targetToCollapse('#collapseBasicForm', 'Formulario básico', 'basic_form.png', 'Configuración basica')
        +targetToCollapse('#collapseAdvancedForm', 'Uso de plugins', 'advanced_form.png', 'Formulario con plugins')
    .row
        +targetToCollapse('#collapseWizardForm', 'Paso a paso', 'wizard_form.png', 'Formulario con ayuda')
        +targetToCollapse('#collapseBarCharts', 'Graficas', 'bar-chart.png', 'Graficas de barras')
        +targetToCollapse('#collapseLinealCharts', 'Graficas', 'lineal-chart.png', 'Graficas lineales')


