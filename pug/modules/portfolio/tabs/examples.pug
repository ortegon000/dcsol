                    .portfolio-hover-content
                        i.fa.fa-plus.fa-3x
                img.img-fluid.w-100(src=imgPath+'filter_table.png', alt='Tabla con filtros')
            .portfolio-caption
                h4.text-primary Tabla con filtros
                p.text-muted Busqueda por medio de filtros

        .col-md-4.col-sm-6.portfolio-item
            a.portfolio-link(data-toggle='collapse', data-parent='#tablesGroup', href='#collapseButtonsTable' role='button', aria-expanded='false', aria-controls='collapseExample')
